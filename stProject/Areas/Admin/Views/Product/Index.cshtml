@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
    </div>
    <div class="col-22 text-end">
        <a asp-controller="Product" asp-action="upsert" class="btn btn-primary" style="margin-bottom: 20px">
            <i class="bi bi-plus"></i>Create new Product
        </a>

    </div>
    <table id="tblData" class="table table-boarderd table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>


    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}