@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
    </div>
    <div class="col-22 text-end">
        <a asp-controller="Category" asp-action="create" class="btn btn-primary">
            <i class="bi bi-plus"></i>Create new category
        </a>

    </div>
<table class="table table-boarderd table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                     <div class="w-75 btn btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id ="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                     </div>
                </td>
            </tr>
        }
    </tbody>

   </table>
</div>